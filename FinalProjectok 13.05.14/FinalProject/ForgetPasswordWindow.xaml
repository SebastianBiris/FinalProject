<Window x:Class="FinalProject.ForgetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forget Password" Height="300" Width="300">
    <Window.Background>
        <ImageBrush ImageSource="Image/ImageGen.jpg"/>
    </Window.Background>
    <Grid>
        <Label Content="Enter your email address" HorizontalAlignment="Left" Margin="83,24,0,0" VerticalAlignment="Top" Width="146" Background="#FFFCFCFC"/>
        <Button x:Name="btnSendPassword" Content="Send" HorizontalAlignment="Left" Margin="114,238,0,0" VerticalAlignment="Top" Width="75" Click="btnSendPassword_Click"/>
        <TextBox x:Name="txtforgotPassword" HorizontalAlignment="Left" Height="23" Margin="35,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224"/>

    </Grid>
</Window>
