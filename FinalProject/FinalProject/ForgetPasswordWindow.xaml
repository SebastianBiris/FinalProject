<Window x:Class="FinalProject.ForgetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forget Password" Height="300" Width="300">
    <Grid>
        <Label Content="Enter your email address" HorizontalAlignment="Left" Margin="65,35,0,0" VerticalAlignment="Top" Width="146"/>
        <TextBox x:Name="txtforgotPassword" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="example@example.com" VerticalAlignment="Top" Width="213" Margin="40,91,0,0" IsReadOnly="True"/>
        <Button x:Name="btnSendPassword" Content="Send" HorizontalAlignment="Left" Margin="106,159,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
